{
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "DEBUG=true  electron ./app",
    "debug": "DEBUG=true  electron ./app --debug-brk=9222",
    "pack": "build --x64 --dir --publish never",
    "dist": "build --x64 --publish never"
  },
  "keywords": [
    "Electron",
    "chromecast"
  ],
  "devDependencies": {
    "devtron": "^1.3.0",
    "electron-prebuilt": "^1.2.7",
    "electron-builder": "^5.21.1"
  },
  "directories": {
      "app": "app"
  },
  "build": {
      "appId": "me.melchor9000.chromecaster-gui",
      "category": "public.app-category.music",
      "asar": true,
      "files": [
          "**/*",
          "!node_modules/*/build/**/*",
          "node_modules/*/build/Release/*.node",
          "!node_modules/lame/deps${/*}",
          "!node_modules/lame/examples${/*}",
          "!**/*.c?(pp|c)",
          "!**/*.h?(pp)",
          "!material-kit/**/*",
          "material-kit/assets/+(js|css)/*"
      ],
      "compression": "normal",
      "mac": {
          "icon": "app/icons/icon.icns"
      },
      "linux": {
          "compression": "xz",
          "depends": [ "libpulse-dev", "libavahi-compat-libdnssd-dev", "libflac", "libappindicator1", "libnotify-bin", "libflac8" ]
      }
  }
}
